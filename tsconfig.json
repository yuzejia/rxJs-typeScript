{
    "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution":"Node"
    },
    "include": [ // 哪些路径需要ts解析
      "src/**/*.ts"
    ],
    "exclude": [ // 哪些路径ts忽略
      "node_modules"
    ]
}